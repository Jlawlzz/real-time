<!doctype html>
<html>
<head>
  <title>Ask the Audience</title>
</head>
<body>
  <div class='app-window'>
    <div class="title">
      <h1>Ask the Audience</h1>
    </div>
  </br>
  <div class="survey-window" id="<%= survey.status %>">
    <div class="survey" id="<%= survey.id %>">
      <h2> Survey: </h2>

      <div class='choices' id="choices">
        <h3> <%= survey.question %> </h3>
        <% for (var answer in survey.answers) { %>
          <button class='btn answers'> <%= answer %> </button>
        <% } %>
      </div>
    </div>

    <div id='thank-you'>
      <h3>Your vote has been sent, thank you!</h3>
    </div>
  </div>

    <h1>Results:</h1>
    <div class="survey-results" id="<%= survey.id %>">
      <h2> Survey: </h2>

      <h3> <%= survey.question %> </h3>
      <div class='results' id="results">
        <% for (var answer in survey.answers) { %>
          <h4><%= answer %>: <%= survey.answers[answer] %> </h4>
        </br>
        <% } %>
      </div>
    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.js"></script>
<script src="../socket.io/socket.io.js"></script>
<script src="../client.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
<link rel="stylesheet" href="../style.css" type="text/css">
</body>
</html>
