<!doctype html>
<html>
<head>
  <title>Ask the Audience</title>
</head>
<body>
  <div class='app-window'>
    <div class="title">
      <h1>Ask the Audience</h1>
    </div>
  </br>
    <h1>Results:</h1>
    <div class="survey" id="<%= survey.id %>">
      <h3> Question: <%= survey.question %> </h3>
      <div class='results' id="results">
        <% for (var answer in survey.answers) { %>
          <h4>answer: <%= answer %></h4>
          <h5>votes: <%= survey.answers[answer] %></h5>
        <% } %>
      </div>
    </div>
    <br>
    <button class="btn btn-danger" id="close">close vote</button>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.js"></script>
<script src="../socket.io/socket.io.js"></script>
<script src="../survey-results.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
<link rel="stylesheet" href="../style.css" type="text/css">
</body>
</html>
